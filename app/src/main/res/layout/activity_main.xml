<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dealfaro.luca.class2.MainActivity"
    android:visibility="visible">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="10dp"
            android:id="@+id/gridLayout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="102dp">

            <ImageButton
                android:id="@+id/imageButton1"
                android:tag="1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:onClick="clickBoard"
                android:src="@drawable/greybox"
                />

            <ImageButton
                android:id="@+id/imageButton2"
                android:tag="2"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:onClick="clickBoard"
                android:src="@drawable/greybox"
                />

            <ImageButton
                android:id="@+id/imageButton3"
                android:tag="3"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:onClick="clickBoard"
                android:src="@drawable/greybox"
                />

            <ImageButton
                android:id="@+id/imageButton4"
                android:tag="4"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:onClick="clickBoard"
                android:src="@drawable/greybox"
                />

            <ImageButton
                android:id="@+id/imageButton5"
                android:tag="5"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:onClick="clickBoard"
                android:src="@drawable/greybox"
                />

            <ImageButton
                android:id="@+id/imageButton6"
                android:tag="6"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:onClick="clickBoard"
                android:src="@drawable/greybox"
                />

            <ImageButton
                android:id="@+id/imageButton7"
                android:tag="7"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:onClick="clickBoard"
                android:src="@drawable/greybox"
                />

            <ImageButton
                android:id="@+id/imageButton8"
                android:tag="8"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:onClick="clickBoard"
                android:src="@drawable/greybox"
                />

            <ImageButton
                android:id="@+id/imageButton9"
                android:tag="9"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:scaleType="fitCenter"
                android:onClick="clickBoard"
                android:src="@drawable/greybox"
                />

        </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/resetbutton"
        android:onClick="reset"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/CrossWonView"
        android:layout_alignEnd="@+id/CrossWonView"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/crosswon"
        android:id="@+id/CrossWonView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/circlewon"
        android:id="@+id/CircleWonView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tie"
        android:id="@+id/TieWonView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:visibility="invisible" />

</RelativeLayout>
